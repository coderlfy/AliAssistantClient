<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    tools:context="com.cat.aliassistantclient.MainActivity" >

    <TextView
        android:id="@+id/tv_Month1To6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="20"
        android:gravity="center"
        android:textColor="#f7ae00"
        android:textSize="30sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_Month6To12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="20"
        android:gravity="center"
        android:textColor="#f7ae00"
        android:textSize="30sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_Month12To24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="20"
        android:gravity="center"
        android:textColor="#f7ae00"
        android:textSize="30sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_FetchTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:textSize="20sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/ll_btngroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <Button
            android:id="@+id/btn_RefressRate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btnRefressRateClick"
            android:text="@string/refress_rate"
            android:textSize="25sp" >

            <requestFocus />
        </Button>

        <Button
            android:id="@+id/btn_SetDisableClawlerTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="btnSetDisableClawlerTimeClick"
            android:text="@string/set_clawler_disabletime"
            android:textSize="25sp" >
        </Button>
    </LinearLayout>

</LinearLayout>